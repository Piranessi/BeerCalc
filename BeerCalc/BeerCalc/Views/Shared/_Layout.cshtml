<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="Description" content="Ile możesz wypić alkoholu zanim padniesz pod stół?" />

    <meta name="Keywords" content="piwo, wódka, alkohol, browar, wodka, vodka, wóda, woda, napój, procenty, volty, volt, 40%, alkoholizm, student, studenci, imrpeza" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>@ViewBag.Title - student-alkoholik.pl</title>

    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/fontello/css/fontello.css" type="text/css" />

    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/Timer.js" type="text/javascript"></script>

    <!--background pattern from: https://www.toptal.com/designers/subtlepatterns/food/ -->
</head>
<body onload="zegar();">
    <div style="clear: both;"></div>

    <div class="container">

        <div class="logoContainer">

            <a href="home/index" class="links">
                <div class="logoLeft">
                    <img src="~/Content/img/beer.png" width="150" height="150" />
                </div>
            </a>

            <a href="home/index" class="links">
                <div class="logoRight">
                    <span style="font-size: 55px !important; color: #1E9411;">Student<br /></span>
                    <span style="font-size: 47px !important">Alkoholik</span>
                </div>
            </a>

            <div id="zegarScript">12:00:00</div>

        </div>

        <div class="fbsb-wrapper">

           <a href="/home/ZrobTest" class="links">
               <div class="sidebar">
                   Zrób test
                   <br />
                   <i class="icon-beer"></i>
               </div>
           </a>


            <div style="clear: both;"></div>

            <a href="http://facebook.com/student-alkoholik" target="_blank" class="links">
                <div class="facebook-social">
                    <i class="icon-facebook"></i>
                </div>
            </a>
        </div>

        <div class="content">
            @RenderBody()
        </div>

        <div style="clear: both;"></div>

        <div class="footer">
            Mateusz Gorzelak. Wszelkie prawa zastrzeżone @DateTime.Now.Year &copy;
        </div>

    </div>  

</body>
</html>